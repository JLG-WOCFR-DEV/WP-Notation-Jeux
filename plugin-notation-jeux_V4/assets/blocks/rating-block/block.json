{
  "apiVersion": 2,
  "name": "notation-jlg/rating-block",
  "title": "Bloc de notation",
  "category": "widgets",
  "icon": "star-filled",
  "description": "Affiche le bloc de notation principal d'un test JLG.",
  "textdomain": "notation-jlg",
  "supports": {
    "align": ["wide", "full"],
    "html": false
  },
  "attributes": {
    "postId": {
      "type": "integer",
      "default": 0
    },
    "scoreLayout": {
      "type": "string",
      "default": "text",
      "enum": ["text", "circle"]
    },
    "accentColor": {
      "type": "string",
      "default": ""
    },
    "scoreDisplay": {
      "type": "string",
      "default": "absolute",
      "enum": ["absolute", "percent"]
    },
    "showVerdict": {
      "type": "string",
      "default": "inherit",
      "enum": ["inherit", "show", "hide"]
    },
    "verdictSummary": {
      "type": "string",
      "default": ""
    },
    "verdictCtaLabel": {
      "type": "string",
      "default": ""
    },
    "verdictCtaUrl": {
      "type": "string",
      "default": ""
    },
    "showAnimations": {
      "type": "boolean",
      "default": true
    },
    "previewTheme": {
      "type": "string",
      "default": "auto",
      "enum": ["auto", "dark", "light"]
    },
    "previewAnimations": {
      "type": "string",
      "default": "inherit",
      "enum": ["inherit", "enabled", "disabled"]
    },
    "visualPreset": {
      "type": "string",
      "default": "inherit",
      "enum": ["inherit", "signature", "minimal", "editorial"]
    },
    "testPlatforms": {
      "type": "string",
      "default": ""
    },
    "testBuild": {
      "type": "string",
      "default": ""
    },
    "validationStatus": {
      "type": "string",
      "default": "none",
      "enum": ["none", "in_review", "needs_retest", "validated"]
    }
  },
  "editorScript": "notation-jlg-rating-block-editor",
  "editorStyle": "notation-jlg-block-editor"
}
