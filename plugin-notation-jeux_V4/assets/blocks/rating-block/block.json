{
  "apiVersion": 2,
  "name": "notation-jlg/rating-block",
  "title": "Bloc de notation",
  "category": "widgets",
  "icon": "star-filled",
  "description": "Affiche le bloc de notation principal d'un test JLG.",
  "textdomain": "notation-jlg",
  "supports": {
    "align": ["wide", "full"],
    "html": false
  },
  "attributes": {
    "postId": {
      "type": "integer",
      "default": 0
    },
    "scoreLayout": {
      "type": "string",
      "default": "text",
      "enum": ["text", "circle"]
    },
    "accentColor": {
      "type": "string",
      "default": ""
    },
    "scoreDisplay": {
      "type": "string",
      "default": "absolute",
      "enum": ["absolute", "percent"]
    },
    "showAnimations": {
      "type": "boolean",
      "default": true
    },
    "previewMeta": {
      "type": "object",
      "default": {}
    }
  },
  "editorScript": "notation-jlg-rating-block-editor",
  "editorStyle": "notation-jlg-block-editor"
}
